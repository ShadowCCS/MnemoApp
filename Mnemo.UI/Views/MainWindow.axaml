<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Mnemo.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sidebar="using:Mnemo.UI.Components.Sidebar"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Mnemo.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="avares://Mnemo.UI/Assets/menmo_dark.ico"
        Title="Mnemo"
        SystemDecorations="None"
        Background="transparent">

<Border CornerRadius="12" Background="{DynamicResource WorkspaceBackgroundBrush}" PointerPressed="Border_PointerPressed">
    <Grid ColumnDefinitions="Auto,*">
        <!-- Sidebar -->
        <sidebar:Sidebar Grid.Column="0" DataContext="{Binding SidebarViewModel}"/>

        <!-- Main Content -->
        <ContentControl Grid.Column="1" 
                        Content="{Binding Navigation.CurrentViewModel}"
                        Margin="0,10,10,10"/>
    </Grid>
</Border>
</Window>





