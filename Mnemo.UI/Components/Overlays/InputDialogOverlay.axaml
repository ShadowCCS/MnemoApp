<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Mnemo.UI.Components.Overlays"
             x:Class="Mnemo.UI.Components.Overlays.InputDialogOverlay"
             x:DataType="local:InputDialogOverlay">
    <UserControl.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="SelectionForegroundBrush" Value="{DynamicResource InputDialogSelectionForegroundBrush}"/>
            <Style Selector="^:pointerover">
                <Setter Property="Foreground" Value="{DynamicResource TextControlForegroundPointerOverBrush}" />
            </Style>
            <Style Selector="^:focus">
                <Setter Property="Foreground" Value="{DynamicResource TextControlForegroundFocusedBrush}" />
                <Style Selector="^ /template/ Border#PART_BorderElement">
                    <Setter Property="BorderBrush" Value="{DynamicResource CardAccentBrush}"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Style>
            </Style>
        </Style>

        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,8"/>
        </Style>
        <Style Selector="Button.Subtle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Style Selector="^:pointerover">
                <Setter Property="Foreground" Value="{DynamicResource InputDialogButtonHoverForegroundBrush}"/>
            </Style>
        </Style>
    </UserControl.Styles>

    <Border Background="{DynamicResource OverlayBackgroundBrush}"
          BorderBrush="{DynamicResource BorderBrush}"
          BorderThickness="1"
          CornerRadius="12"
          Padding="16"
          MinWidth="400">
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
      <TextBlock Text="{Binding Title}"
                 FontSize="{DynamicResource FontSize.Heading4}" 
                 FontFamily="{DynamicResource Font.Bold}"
                 Foreground="{DynamicResource TextPrimaryBrush}"/>
      <TextBox Grid.Row="1"
               x:Name="InputTextBox"
               Text="{Binding InputValue, Mode=TwoWay}"
               Watermark="{Binding Placeholder}"
               FontFamily="{DynamicResource Font.Medium}"
               FontSize="{DynamicResource FontSize.Body.Small}"/>
      <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
        <Button Content="{Binding CancelText}"
                Classes="Subtle"
                Command="{Binding CancelCommand}"/>
        <Button Content="{Binding ConfirmText}"
                Command="{Binding ConfirmCommand}"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>







