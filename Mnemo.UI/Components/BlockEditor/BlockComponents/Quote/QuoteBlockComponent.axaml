<UserControl
    x:Class="Mnemo.UI.Components.BlockEditor.BlockComponents.Quote.QuoteBlockComponent"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:CompileBindings="False">
    <Border
        BorderBrush="{DynamicResource SystemAccentColor}"
        BorderThickness="3,0,0,0"
        Padding="12,4,0,4">
        <TextBox
            x:Name="InputTextBox"
            AcceptsReturn="False"
            Background="Transparent"
            BorderThickness="0"
            FontSize="14"
            FontStyle="Italic"
            Opacity="0.8"
            Padding="0"
            Text="{Binding Content, Mode=TwoWay}"
            TextWrapping="Wrap"
            Watermark="{Binding Watermark}" />
    </Border>
</UserControl>






