<UserControl
    x:Class="Mnemo.UI.Components.BlockEditor.BlockComponents.Heading1.Heading1BlockComponent"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:CompileBindings="False">
    <TextBox
        x:Name="InputTextBox"
        AcceptsReturn="False"
        Background="Transparent"
        BorderThickness="0"
        FontSize="32"
        FontWeight="Bold"
        Padding="0"
        Text="{Binding Content, Mode=TwoWay}"
        TextWrapping="Wrap"
        Watermark="{Binding Watermark}" />
</UserControl>






