<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mnemo.UI.Modules.Path.ViewModels"
             xmlns:controls="using:Mnemo.UI.Controls"
             xmlns:converters="using:Mnemo.UI.Converters"
             xmlns:components="using:Mnemo.UI.Components"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
             x:Class="Mnemo.UI.Modules.Path.Views.PathView"
             x:DataType="vm:PathViewModel"
             Foreground="{DynamicResource TextPrimaryBrush}"
             x:Name="root">

    <UserControl.Resources>
        <converters:FolderIconConverter x:Key="FolderIconConverter"/>
        <converters:ProgressPhaseBrushConverter x:Key="ProgressPhaseBrushConverter"/>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="TextBox.SettingsSearch">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8,0"/>
            <Style Selector="^:pointerover /template/ Border#PART_BorderElement">
                <Setter Property="Background" Value="{DynamicResource ListItemHoverBackgroundBrush}"/>
            </Style>
            <Style Selector="^:focus /template/ Border#PART_BorderElement">
                <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{DynamicResource CardAccentBrush}"/>
            </Style>
        </Style>

        <Style Selector="RadioButton.ToggleViewItem">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <ContentPresenter x:Name="PART_ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="RadioButton.ToggleViewItem controls|SvgIcon">
            <Setter Property="Color" Value="{DynamicResource TextSecondaryBrush}"/>
        </Style>
        <Style Selector="RadioButton.ToggleViewItem:checked">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="RadioButton.ToggleViewItem:checked controls|SvgIcon">
            <Setter Property="Color" Value="{DynamicResource CardAccentBrush}"/>
        </Style>
        <Style Selector="RadioButton.ToggleViewItem:pointerover">
            <Setter Property="Background" Value="{DynamicResource ListItemHoverBackgroundBrush}"/>
        </Style>
        <Style Selector="RadioButton.ToggleViewItem:checked:pointerover">
            <Setter Property="Background" Value="{DynamicResource ListItemHoverBackgroundBrush}"/>
        </Style>

        <Style Selector="Border.CardHover:pointerover">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardAccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style Selector="Border.FeaturedCardHover:pointerover">
            <Setter Property="RenderTransform" Value="scale(1.02)"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
        <Style Selector="Border.FeaturedCardHover">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent"/>
            </Style>
            <Style Selector="^:selected /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent"/>
            </Style>
        </Style>

        <Style Selector="Button[Background=Transparent]:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        <Style Selector="Button[Background=Transparent]:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40" Spacing="40">
            <!-- Header Section -->
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Spacing="8">
                    <TextBlock Text="Learning Path" 
                               FontSize="{DynamicResource FontSize.Heading1}" 
                               FontFamily="{DynamicResource Font.Bold}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Organize your knowledge and track your progress" 
                               FontSize="{DynamicResource FontSize.Body.Medium}"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <Button Grid.Column="1" Command="{Binding CreateCommand}" 
                        Background="Transparent" 
                        BorderThickness="1"
                        BorderBrush="{DynamicResource CardAccentBrush}"
                        Padding="20,10" CornerRadius="12">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Outlined/file-plus.svg" 
                                          Width="18" Height="18" Color="{DynamicResource CardAccentBrush}"/>
                        <TextBlock Text="Generate New" 
                                   FontFamily="{DynamicResource Font.SemiBold}" 
                                   Foreground="{DynamicResource CardAccentBrush}"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Featured / Recently Active -->
            <StackPanel Spacing="20">
                <TextBlock Text="Recently Active" 
                           FontSize="{DynamicResource FontSize.Heading3}" 
                           FontFamily="{DynamicResource Font.SemiBold}"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                
                <ListBox ItemsSource="{Binding FrequentlyUsedItems}" 
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         ClipToBounds="False">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" Margin="5,10,20,20"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="vm:PathItemViewModel">
                            <Button Command="{Binding #root.((vm:PathViewModel)DataContext).OpenPathCommand}"
                                    CommandParameter="{Binding}"
                                    Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,20,0">
                                <Border Width="280" Height="170" 
                                        Background="{DynamicResource CardBackgroundSecondaryBrush}" 
                                        Cursor="Hand"
                                        CornerRadius="24" ClipToBounds="True"
                                        Classes="FeaturedCardHover">
                                        <Panel>
                                            <!-- Background Decoration -->
                                            <Ellipse Width="180" Height="180" Fill="{DynamicResource WidgetIconBackground1Brush}" 
                                                     Opacity="0.05" Margin="-60,-60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                            <Ellipse Width="120" Height="120" Fill="{DynamicResource CardAccentBrush}" 
                                                     Opacity="0.03" Margin="0,0,-40,-40" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                            
                                            <Grid RowDefinitions="Auto,*,Auto" Margin="24">
                                                <Grid Grid.Row="0">
                                                    <Border HorizontalAlignment="Left" Padding="10,5" 
                                                            Background="{DynamicResource SearchBarBackgroundBrush}" CornerRadius="8">
                                                        <TextBlock Text="{Binding Category}" 
                                                                   FontSize="{DynamicResource FontSize.Caption}" 
                                                                   FontFamily="{DynamicResource Font.Bold}" 
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                    </Border>
                                                    <Button HorizontalAlignment="Right" 
                                                            Command="{Binding #root.((vm:PathViewModel)DataContext).DeletePathCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent" 
                                                            BorderThickness="0" 
                                                            Padding="6"
                                                            Cursor="Hand">
                                                        <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Outlined/x.svg"
                                                                          Width="16" Height="16"
                                                                          Color="{DynamicResource TextTertiaryBrush}"/>
                                                    </Button>
                                                </Grid>
                                                
                                                <TextBlock Grid.Row="1" Text="{Binding Name}" 
                                                           FontSize="{DynamicResource FontSize.Heading5}" 
                                                           FontFamily="{DynamicResource Font.SemiBold}" 
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                                                
                                                <StackPanel Grid.Row="2" Spacing="8">
                                                    <DockPanel>
                                                        <TextBlock Text="{Binding Progress, StringFormat={}{0}% complete}" 
                                                                   FontSize="{DynamicResource FontSize.Body.ExtraSmall}" 
                                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                        <TextBlock DockPanel.Dock="Right" Text="{Binding LastModified}" 
                                                                   FontSize="{DynamicResource FontSize.Body.ExtraSmall}" 
                                                                   Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                   HorizontalAlignment="Right"/>
                                                    </DockPanel>
                                                    <ProgressBar Value="{Binding Progress}" Height="8" CornerRadius="4"
                                                                 Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                                 Foreground="{Binding Progress, Converter={StaticResource ProgressPhaseBrushConverter}}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Panel>
                                    </Border>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    </ListBox>
            </StackPanel>

            <!-- Library / Continue Studying -->
            <StackPanel Spacing="25">
                <TextBlock Text="Library" 
                           FontSize="{DynamicResource FontSize.Heading3}" 
                           FontFamily="{DynamicResource Font.SemiBold}"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>

                <!-- Modern Toolbar -->
                <DockPanel LastChildFill="False">
                    <TextBox Watermark="Search your library..." 
                             Classes="SettingsSearch"
                             Width="320" 
                             Height="38"
                             Text="{Binding SearchText}"
                             VerticalContentAlignment="Center"
                             DockPanel.Dock="Left">
                        <TextBox.InnerLeftContent>
                            <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Outlined/search.svg" 
                                              Width="16" Height="16" 
                                              Margin="12,0,0,0"
                                              Color="{DynamicResource TextSecondaryBrush}"/>
                        </TextBox.InnerLeftContent>
                    </TextBox>

                    <StackPanel Orientation="Horizontal" Spacing="12" DockPanel.Dock="Right">
                        <Border CornerRadius="12" Padding="4">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <RadioButton Classes="ToggleViewItem" IsChecked="{Binding IsGridView, Converter={StaticResource BoolNegationConverter}}">
                                    <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Outlined/list-details.svg" Width="18" Height="18"/>
                                </RadioButton>
                                <RadioButton Classes="ToggleViewItem" IsChecked="{Binding IsGridView}">
                                    <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Filled/layout-grid.svg" Width="18" Height="18"/>
                                </RadioButton>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </DockPanel>

                <!-- Items View -->
                <Panel>
                    <!-- Grid View -->
                    <ListBox ItemsSource="{Binding AllItems}" 
                             IsVisible="{Binding IsGridView}">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="vm:PathBaseViewModel">
                                <Button Command="{Binding #root.((vm:PathViewModel)DataContext).OpenPathCommand}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,20,20">
                                    <Border Padding="20" Background="{DynamicResource CardBackgroundPrimaryBrush}" Cursor="Hand" 
                                            CornerRadius="20" MinWidth="180" MaxWidth="220" Height="180" Classes="CardHover">
                                        <Grid RowDefinitions="Auto,*,Auto">
                                            <Grid Grid.Row="0">
                                                <StackPanel Orientation="Horizontal" Spacing="12">
                                                    <Border Width="40" Height="40" CornerRadius="12" Background="{DynamicResource SearchBarBackgroundBrush}">
                                                        <controls:SvgIcon SvgPath="{Binding IsFolder, Converter={StaticResource FolderIconConverter}}" 
                                                                          Width="20" Height="20" Color="{DynamicResource CardAccentBrush}"/>
                                                    </Border>
                                                    <StackPanel VerticalAlignment="Center">
                                                         <TextBlock Text="{Binding Category}" 
                                                                    FontSize="{DynamicResource FontSize.CaptionButton}" 
                                                                    Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                    FontFamily="{DynamicResource Font.SemiBold}"/>
                                                         <TextBlock Text="{Binding Size, StringFormat={}{0} MB}" 
                                                                    FontSize="{DynamicResource FontSize.CaptionButton}" 
                                                                    Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Button HorizontalAlignment="Right" 
                                                        Command="{Binding #root.((vm:PathViewModel)DataContext).DeletePathCommand}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent" 
                                                        BorderThickness="0" 
                                                        Padding="6"
                                                        Cursor="Hand">
                                                    <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Outlined/x.svg"
                                                                      Width="14" Height="14"
                                                                      Color="{DynamicResource TextTertiaryBrush}"/>
                                                </Button>
                                            </Grid>
                                            
                                            <TextBlock Grid.Row="1" Text="{Binding Name}" FontSize="{DynamicResource FontSize.Body.Small}" 
                                                       FontFamily="{DynamicResource Font.Medium}" TextWrapping="Wrap" Margin="0,12,0,0"
                                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                                       VerticalAlignment="Top" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                                            
                                            <StackPanel Grid.Row="2" Spacing="8">
                                                <ProgressBar Value="{Binding Progress}" Height="6" CornerRadius="3"
                                                             Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                             Foreground="{Binding Progress, Converter={StaticResource ProgressPhaseBrushConverter}}"/>
                                                <TextBlock Text="{Binding LastModified}" 
                                                           FontSize="{DynamicResource FontSize.Caption}" 
                                                           Foreground="{DynamicResource TextTertiaryBrush}" 
                                                           HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- List View -->
                    <StackPanel Spacing="10" IsVisible="{Binding !IsGridView}">
                        <!-- Custom List Header -->
                        <Border Padding="12,8" Margin="0,0,0,5">
                            <Grid ColumnDefinitions="48,*,150,100,170,40">
                                <TextBlock Grid.Column="1" Text="NAME" 
                                           FontSize="{DynamicResource FontSize.Caption}" 
                                           FontFamily="{DynamicResource Font.Bold}" 
                                           Foreground="{DynamicResource TextTertiaryBrush}" 
                                           Margin="12,0,0,0"/>
                                <TextBlock Grid.Column="2" Text="LAST MODIFIED" 
                                           FontSize="{DynamicResource FontSize.Caption}" 
                                           FontFamily="{DynamicResource Font.Bold}" 
                                           Foreground="{DynamicResource TextTertiaryBrush}" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="SIZE" 
                                           FontSize="{DynamicResource FontSize.Caption}" 
                                           FontFamily="{DynamicResource Font.Bold}" 
                                           Foreground="{DynamicResource TextTertiaryBrush}" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="PROGRESS" 
                                           FontSize="{DynamicResource FontSize.Caption}" 
                                           FontFamily="{DynamicResource Font.Bold}" 
                                           Foreground="{DynamicResource TextTertiaryBrush}" 
                                           HorizontalAlignment="Right" 
                                           Margin="0,0,10,0"/>
                            </Grid>
                        </Border>

                        <ListBox ItemsSource="{Binding AllItems}">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="vm:PathBaseViewModel">
                                    <Button Command="{Binding #root.((vm:PathViewModel)DataContext).OpenPathCommand}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent" BorderThickness="0" Padding="0" HorizontalAlignment="Stretch">
                                        <Border Background="{DynamicResource CardBackgroundPrimaryBrush}" CornerRadius="16" Margin="0,0,0,8" Padding="12" Classes="CardHover" ClipToBounds="True" Cursor="Hand">
                                            <Grid ColumnDefinitions="48,*,150,100,170,40">
                                                <Border Grid.Column="0" Width="40" Height="40" CornerRadius="10" Background="{DynamicResource SearchBarBackgroundBrush}">
                                                    <controls:SvgIcon SvgPath="{Binding IsFolder, Converter={StaticResource FolderIconConverter}}"
                                                                      Width="20" Height="20" Color="{DynamicResource CardAccentBrush}"/>
                                                </Border>
    
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="{DynamicResource FontSize.Body.Small}" 
                                                               FontFamily="{DynamicResource Font.SemiBold}" 
                                                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Category}" 
                                                               FontSize="{DynamicResource FontSize.Caption}" 
                                                               Foreground="{DynamicResource TextTertiaryBrush}"/>
                                                </StackPanel>
    
                                                <TextBlock Grid.Column="2" Text="{Binding LastModified}" 
                                                           VerticalAlignment="Center" 
                                                           FontSize="{DynamicResource FontSize.Body.ExtraSmall}" 
                                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                                           HorizontalAlignment="Center"/>
    
                                                <TextBlock Grid.Column="3" Text="{Binding Size, StringFormat={}{0} MB}" 
                                                           VerticalAlignment="Center" 
                                                           FontSize="{DynamicResource FontSize.Body.ExtraSmall}" 
                                                           Foreground="{DynamicResource TextSecondaryBrush}" 
                                                           HorizontalAlignment="Center"/>
    
                                                <Grid Grid.Column="4" VerticalAlignment="Center" Width="170">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
    
                                                    <ProgressBar Grid.Column="0"
                                                                 Value="{Binding Progress}"
                                                                 Height="6"
                                                                 CornerRadius="3"
                                                                 Margin="0,0,8,0"
                                                                 VerticalAlignment="Center"
                                                                 Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                                 Foreground="{Binding Progress, Converter={StaticResource ProgressPhaseBrushConverter}}"/>
                                                    
                                                    <TextBlock Grid.Column="1"
                                                               Text="{Binding Progress, StringFormat={}{0:0}%}"
                                                               FontSize="{DynamicResource FontSize.Caption}"
                                                               Foreground="{DynamicResource TextTertiaryBrush}"
                                                               VerticalAlignment="Center"/>
                                                </Grid>

                                                <Button Grid.Column="5"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Command="{Binding #root.((vm:PathViewModel)DataContext).DeletePathCommand}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent" 
                                                        BorderThickness="0" 
                                                        Padding="6"
                                                        Cursor="Hand">
                                                    <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Outlined/x.svg"
                                                                      Width="16" Height="16"
                                                                      Color="{DynamicResource TextTertiaryBrush}"/>
                                                </Button>
    
                                            </Grid>
                                        </Border>
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Panel>
            </StackPanel>

            <!-- Pagination -->
            <components:Paginator Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
