<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Mnemo.UI.Modules.AITesting.ViewModels"
             xmlns:controls="using:Mnemo.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Mnemo.UI.Modules.AITesting.Views.AITestingView"
             x:DataType="vm:AITestingViewModel">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40" Spacing="40">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="AI Testing" 
                           FontSize="32" 
                           FontFamily="{DynamicResource Font.Bold}"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
                <TextBlock Text="Experiment with AI capabilities and prompts" 
                           FontSize="{DynamicResource FontSize.Body.Medium}"
                           Foreground="{DynamicResource TextSecondaryBrush}"/>
            </StackPanel>

            <!-- Test Area -->
            <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*">
                <StackPanel Grid.Row="0" Spacing="15">
                    <TextBlock Text="System Prompt" 
                               FontSize="{DynamicResource FontSize.Heading3}" 
                               FontFamily="{DynamicResource Font.SemiBold}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <Border Background="{DynamicResource CardBackgroundSecondaryBrush}" 
                            CornerRadius="12" Padding="15">
                        <TextBlock Text="You are a helpful assistant." 
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="{DynamicResource FontSize.Body.Small}"/>
                    </Border>

                    <TextBlock Text="User Prompt" 
                               FontSize="{DynamicResource FontSize.Heading3}" 
                               FontFamily="{DynamicResource Font.SemiBold}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBox Text="{Binding UserInput}" 
                             Watermark="Type your prompt here..."
                             AcceptsReturn="True"
                             Height="100"
                             TextWrapping="Wrap"
                             Background="{DynamicResource CardBackgroundSecondaryBrush}"
                             BorderThickness="0"
                             CornerRadius="12"
                             Padding="12"
                             VerticalContentAlignment="Top"/>
                    
                    <Button Command="{Binding SendPromptCommand}" 
                            HorizontalAlignment="Right"
                            Background="{DynamicResource CardAccentBrush}"
                            Foreground="White"
                            Padding="24,12"
                            CornerRadius="12"
                            IsEnabled="{Binding !IsBusy}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <controls:SvgIcon SvgPath="avares://Mnemo.UI/Icons/Tabler/Used/Outlined/file-text.svg" 
                                              Width="18" Height="18" Color="White"/>
                            <TextBlock Text="Send Prompt" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Separator Grid.Row="1" Margin="0,30" Background="{DynamicResource CardBackgroundSecondaryBrush}" Height="1"/>

                <StackPanel Grid.Row="2" Spacing="15">
                    <TextBlock Text="AI Response" 
                               FontSize="{DynamicResource FontSize.Heading3}" 
                               FontFamily="{DynamicResource Font.SemiBold}"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    
                    <Border Background="{DynamicResource CardBackgroundPrimaryBrush}" 
                            CornerRadius="20" 
                            Padding="24"
                            MinHeight="200"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource CardBackgroundSecondaryBrush}">
                        <TextBlock Text="{Binding AIResponse}" 
                                   TextWrapping="Wrap"
                                   FontSize="{DynamicResource FontSize.Body.Medium}"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
