<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="using:MnemoApp.Core.Services"
             xmlns:vm="using:MnemoApp.UI.Components.Sidebar"
             x:Class="MnemoApp.UI.Components.Sidebar.Sidebar"
             x:DataType="vm:SidebarViewModel">
    
    <Grid>
        <!-- Expanded Sidebar -->
        <Border x:Name="ExpandedSidebar"
            Background="{DynamicResource SidebarBackgroundBrush}" 
            CornerRadius="15" 
            Padding="15"
            Width="250"
            IsVisible="{Binding !IsSidebarCollapsed}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        Spacing="10"
                        Margin="0,0,0,20">
                <services:MnemoSvg SvgPath="avares://MnemoApp/UI/Assets/Branding/logo_full.svg" 
                                  Width="100" Height="20" 
                                  Fill="{DynamicResource SidebarLogoBrush}"/>
                <Button Background="Transparent" 
                        BorderThickness="0" 
                        Command="{Binding ToggleSidebarCommand}"
                        ToolTip.Tip="Collapse sidebar"
                        VerticalAlignment="Center">
                    <services:MnemoSvg SvgPath="avares://MnemoApp/UI/Icons/Tabler/outline/chevron-left.svg" 
                                      Width="18" Height="18" 
                                      Stroke="{DynamicResource ChevronSidebarBrush}"/>
                </Button>
            </StackPanel>
            
            <!-- Navigation Section -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Spacing="8" Margin="0,0,0,16">
                                <!-- Category Header -->
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="{DynamicResource NavbarFontSize}" 
                                           FontFamily="{DynamicResource BoldFont}" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           Margin="0,0,0,8"/>

                                
                                <!-- Category Items -->
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="nav-button"
                                                    Classes.selected="{Binding IsSelected}"
                                                    Background="Transparent" 
                                                    BorderThickness="0" 
                                                    HorizontalAlignment="Stretch"
                                                    HorizontalContentAlignment="Left"
                                                    ToolTip.Tip="{Binding Title}"
                                                    FontSize="{DynamicResource NavbarFontSize}" 
                                                    FontFamily="{DynamicResource MediumFont}" 
                                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                                    Padding="12,8"
                                                    Command="{Binding $parent[UserControl].((vm:SidebarViewModel)DataContext).NavigateCommand}"
                                                    CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal" Spacing="12">
                                                    <services:MnemoSvg SvgPath="{Binding IconPath, FallbackValue='avares://MnemoApp/UI/Icons/Tabler/outline/circle.svg'}" 
                                                                      Width="20" Height="20" 
                                                                      Stroke="{DynamicResource IconsSidebarBrush}"
                                                                      StrokeWidth="2"/>
                                                    <TextBlock Text="{Binding Title}" 
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
            <!-- Footer Section -->
            <StackPanel Grid.Row="2" 
                        Spacing="12">
                
                <Button Classes="nav-button"
                        Background="Transparent" 
                        BorderThickness="0" 
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        ToolTip.Tip="Keyboard shortcuts"
                        Padding="12,8">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <services:MnemoSvg SvgPath="avares://MnemoApp/UI/Icons/Tabler/outline/paper-plane.svg" 
                                          Width="20" Height="20" 
                                          Stroke="{DynamicResource IconsSidebarBrush}"/>
                        <StackPanel Spacing="2">
                            <TextBlock Text="Quick Actions" 
                                       Foreground="#374151"
                                       FontSize="14"/>
                            <TextBlock Text="alt + shift + Q" 
                                       FontSize="11" 
                                       Foreground="#9ca3af"/>
                        </StackPanel>
                    </StackPanel>
                </Button>
                
                <TextBlock Text="v1.0.0-beta" 
                           FontSize="11" 
                           Foreground="#9ca3af"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
    
    <!-- Collapsed Sidebar -->
    <Border x:Name="CollapsedSidebar"
            Background="{DynamicResource SidebarBackgroundBrush}" 
            CornerRadius="15" 
            Padding="15"
            Width="70"
            IsVisible="{Binding IsSidebarCollapsed}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header Section -->
            <StackPanel Grid.Row="0" 
                        Orientation="Vertical" 
                        Spacing="10"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <services:MnemoSvg SvgPath="avares://MnemoApp/UI/Assets/Branding/logo_icon.svg" 
                                  Width="24" Height="24" 
                                  Fill="{DynamicResource SidebarLogoBrush}"/>
                <Button Background="Transparent" 
                        BorderThickness="0" 
                        Command="{Binding ToggleSidebarCommand}"
                        ToolTip.Tip="Expand sidebar">
                    <services:MnemoSvg SvgPath="avares://MnemoApp/UI/Icons/Tabler/outline/chevron-right.svg" 
                                      Width="16" Height="16" 
                                      Stroke="{DynamicResource ChevronSidebarBrush}"/>
                </Button>
            </StackPanel>
            
            <!-- Navigation Section -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <ItemsControl ItemsSource="{Binding Categories}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Classes="nav-button-collapsed"
                                                    Classes.selected="{Binding IsSelected}"
                                                    Background="Transparent" 
                                                    BorderThickness="0" 
                                                    ToolTip.Tip="{Binding Title}"
                                                    Padding="8"
                                                    Margin="0,0,0,8"
                                                    Command="{Binding $parent[UserControl].((vm:SidebarViewModel)DataContext).NavigateCommand}"
                                                    CommandParameter="{Binding}">
                                                <services:MnemoSvg SvgPath="{Binding IconPath, FallbackValue='avares://MnemoApp/UI/Icons/Tabler/outline/circle.svg'}" 
                                                                  Width="20" Height="20" 
                                                                  Stroke="{DynamicResource IconsSidebarBrush}"/>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
    </Grid>
    
    <UserControl.Styles>
        <!-- Navigation button styles -->
        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="#f3f4f6"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        
        <Style Selector="Button.nav-button:pressed">
            <Setter Property="Background" Value="#e5e7eb"/>
        </Style>
        
        <Style Selector="Button.nav-button.selected">
            <Setter Property="Background" Value="#dbeafe"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>
        
        <Style Selector="Button.nav-button.selected services|MnemoSvg">
            <Setter Property="Stroke" Value="{DynamicResource IconsSidebarBrush}"/>
        </Style>

        <Style Selector="Button.nav-button.selected TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style Selector="Button.nav-button-collapsed:pointerover">
            <Setter Property="Background" Value="#f3f4f6"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        
        <Style Selector="Button.nav-button-collapsed:pressed">
            <Setter Property="Background" Value="#e5e7eb"/>
        </Style>
        
        <Style Selector="Button.nav-button-collapsed.selected">
            <Setter Property="Background" Value="#dbeafe"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <Style Selector="Button.nav-button-collapsed.selected services|MnemoSvg">
            <Setter Property="Stroke" Value="{DynamicResource IconsSidebarBrush}"/>
        </Style>
    </UserControl.Styles>
</UserControl>