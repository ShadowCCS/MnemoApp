<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:MnemoApp.UI.Components"
             xmlns:overlays="clr-namespace:MnemoApp.UI.Components.Overlays"
             x:Class="MnemoApp.UI.Components.Overlays.LoadingOverlay"
             x:Name="LoadingOverlayRoot"
             x:DataType="overlays:LoadingOverlay">

    <UserControl.Styles>
        <Style Selector="Border.loading-container">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundPrimaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource LineColorBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="32" />
            <Setter Property="MaxWidth" Value="480" />
            <Setter Property="MinWidth" Value="360" />
        </Style>

        <Style Selector="TextBlock.loading-title">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style Selector="TextBlock.loading-description">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,24" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style Selector="Border.progress-container">
            <Setter Property="Background" Value="{DynamicResource ProgressBarBackgroundBrush}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Height" Value="8" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style Selector="Border.progress-fill">
            <Setter Property="Background" Value="{DynamicResource ProgressBarFillBrush}" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <Style Selector="TextBlock.progress-text">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,24" />
        </Style>

        <Style Selector="TextBlock.leave-page-text">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style Selector="Button.action-button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="4,0" />
        </Style>

        <Style Selector="StackPanel.button-panel">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Spacing" Value="8" />
        </Style>

        <Style Selector="Border.task-list">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource LineColorBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="MaxHeight" Value="200" />
        </Style>

        <Style Selector="TextBlock.subtask-text">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="Margin" Value="0,2" />
        </Style>
    </UserControl.Styles>

    <Border Classes="loading-container">
        <StackPanel>
            <!-- Title -->
            <TextBlock Classes="loading-title" 
                       Text="{Binding Title}" 
                       IsVisible="{Binding Title, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

            <!-- Description -->
            <TextBlock Classes="loading-description" 
                       Text="{Binding Description}" 
                       IsVisible="{Binding Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

            <!-- Progress Bar -->
            <Border Classes="progress-container">
                <Border Classes="progress-fill" 
                        Width="{Binding ProgressWidth}" />
            </Border>

            <!-- Progress Text -->
            <TextBlock Classes="progress-text" 
                       Text="{Binding ProgressText}" 
                       IsVisible="{Binding ProgressText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

            <!-- Sub Tasks (if any) -->
            <Border Classes="task-list" IsVisible="{Binding HasSubTasks}">
                <ScrollViewer>
                    <ItemsControl ItemsSource="{Binding SubTasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="overlays:SubTaskViewModel">
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="â€¢" 
                                               FontSize="12" 
                                               Foreground="{DynamicResource TextTertiaryBrush}" 
                                               Margin="0,0,8,0" />
                                    <TextBlock Classes="subtask-text" 
                                               Text="{Binding Name}" />
                                    <TextBlock Classes="subtask-text" 
                                               Text="{Binding StatusText}" 
                                               Margin="8,0,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Leave page text -->
            <TextBlock Classes="leave-page-text" 
                       Text="Feel free to leave this page" />

        </StackPanel>
    </Border>
</UserControl>
