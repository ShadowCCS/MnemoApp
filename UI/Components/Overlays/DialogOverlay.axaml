<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MnemoApp.UI.Components.Overlays"
             x:Class="MnemoApp.UI.Components.Overlays.DialogOverlay"
             x:DataType="local:DialogOverlay">
  <Border Background="{DynamicResource WorkspaceBackgroundBrush}"
          BorderBrush="{DynamicResource IconsSeparationBarBrush}"
          BorderThickness="1"
          CornerRadius="12"
          Padding="16"
          MinWidth="360">
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
      <TextBlock Text="{Binding Title}"
                 FontSize="{DynamicResource FontSize.Medium}" FontFamily="{DynamicResource Font.Bold}"/>
      <TextBlock Grid.Row="1"
                  Text="{Binding Description}"
                  FontFamily="{DynamicResource Font.Medium}"
                  FontSize="{DynamicResource FontSize.ExtraSmall}"
                 TextWrapping="Wrap"
                 Opacity="0.85"/>
      <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
        <Button Content="{Binding SecondaryText}"
                Classes="Subtle"
                Command="{Binding SecondaryCommand}"/>
        <Button Content="{Binding PrimaryText}"
                Command="{Binding PrimaryCommand}"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>


