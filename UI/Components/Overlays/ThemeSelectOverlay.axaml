<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:MnemoApp.UI.Components.Overlays"
             x:Class="MnemoApp.UI.Components.Overlays.ThemeSelectOverlay"
             x:DataType="local:ThemeSelectOverlay">
  <Border Background="{DynamicResource WorkspaceBackgroundBrush}"
          BorderBrush="{DynamicResource IconsSeparationBarBrush}"
          BorderThickness="1"
          CornerRadius="12"
          Padding="16"
          MinWidth="650"
          MinHeight="400">
    <StackPanel Spacing="12">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Top section - Header -->
        <StackPanel Grid.Row="0" Background="Blue" Margin="0,0,0,12" Spacing="12" Orientation="Horizontal">
          <ComboBox MinWidth="130">
            <ComboBoxItem Content="All Categories"/>
            <ComboBoxItem Content="Last Used"/>
          </ComboBox>
          
          <TextBox Text="Search" MinWidth="360"/>

          <Button Content="Import"/>
          <Button Content="Export"/>
        </StackPanel>
        
        <!-- Middle section - Main content area -->
        <WrapPanel Grid.Row="1" Background="Green" Margin="20" MaxWidth="550">
          <Button Content="ThemeName" Width="120" Height="100" Background="Red" Margin="6"/>
          <Button Content="ThemeName" Width="120" Height="100" Background="Red" Margin="6"/>
          <Button Content="ThemeName" Width="120" Height="100" Background="Red" Margin="6"/>
          <Button Content="ThemeName" Width="120" Height="100" Background="Red" Margin="6"/>
          <Button Content="ThemeName" Width="120" Height="100" Background="Red" Margin="6"/>
          <Button Content="ThemeName" Width="120" Height="100" Background="Red" Margin="6"/>
          <Button Content="ThemeName" Width="120" Height="100" Background="Red" Margin="6"/>
        </WrapPanel>
        
        <!-- Bottom section - Actions -->
        <StackPanel Grid.Row="2" Background="Red" Orientation="Horizontal" Spacing="12">
          <Button Content="Apply" Command="{Binding ConfirmCommand}"/>
        </StackPanel>
      </Grid>
    </StackPanel>
  </Border>
</UserControl>