<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MnemoApp.Modules.TestModule"
        xmlns:vm="clr-namespace:MnemoApp.Modules.TestModule"
        xmlns:services="using:MnemoApp.Core.Services"
        xmlns:i18n="clr-namespace:MnemoApp.UI.Markup"
        xmlns:components="clr-namespace:MnemoApp.UI.Components"
        mc:Ignorable="d"
        x:Class="MnemoApp.Modules.TestModule.TestModuleView"
        x:DataType="vm:TestModuleViewModel">
    <Grid Margin="10">
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
        <StackPanel>
            <TextBlock i18n:Localization.Namespace="TestModule"
                       i18n:Localization.TextKey="Title"
                       FontSize="{DynamicResource FontSize.Heading3}"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       FontFamily="{DynamicResource Font.Bold}" />

            <TextBlock i18n:Localization.Namespace="TestModule"
                       i18n:Localization.TextKey="Description"
                       FontSize="{DynamicResource FontSize.Body.Small}"
                       Foreground="{DynamicResource TextSecondaryBrush}"
                       Margin="0,10,0,20"
                       TextWrapping="Wrap" />

            <Border Background="{DynamicResource SurfaceSecondaryBrush}"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="Component Testing Area"
                               FontSize="{DynamicResource FontSize.Heading5}"
                               FontFamily="{DynamicResource Font.SemiBold}"
                               Foreground="{DynamicResource TextPrimaryBrush}" />

                    <TextBlock Text="This is your testing playground for new components and features. Add your test components here."
                               FontSize="{DynamicResource FontSize.Body.Small}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <Button Content="Test Button"
                            Classes="primary"
                            HorizontalAlignment="Left" />

                    <TextBox Watermark="Test input field"
                             Width="300"
                             HorizontalAlignment="Left" />

                    <components:LocalSearchBar HorizontalAlignment="Left" />
                    <components:GlobalSearchBar HorizontalAlignment="Left" />

                    <StackPanel Spacing="10">
                        <TextBlock Text="Toggle Switch Test"
                                   FontSize="{DynamicResource FontSize.Heading6}"
                                   FontFamily="{DynamicResource Font.SemiBold}"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Basic Toggle Switch:" 
                                           FontSize="{DynamicResource FontSize.Body.Small}"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ToggleSwitch />
                            </StackPanel>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Checked Toggle Switch:" 
                                           FontSize="{DynamicResource FontSize.Body.Small}"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ToggleSwitch IsChecked="True" />
                            </StackPanel>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="With Labels:" 
                                           FontSize="{DynamicResource FontSize.Body.Small}"
                                           Foreground="{DynamicResource TextSecondaryBrush}" />
                                <ToggleSwitch/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Test AI Task"
                            Command="{Binding TestAICommand}"
                            FontSize="{DynamicResource FontSize.Body.Small}"
                            Classes="primary"
                            HorizontalAlignment="Left" />

                    <StackPanel Margin="20" Spacing="20">
                        <TextBlock Text="LaTeX Rendering Test" FontSize="24" FontWeight="Bold" />

                        <TextBlock Text="Inline Math Examples:" FontSize="16" FontWeight="Bold" />
                        <components:RichContentView Source="This is inline math: $x^2 + y^2 = z^2$ and $E = mc^2$" />

                        <TextBlock Text="Display Math Examples:" FontSize="16" FontWeight="Bold" />
                        <components:RichContentView Source="$$x = \frac{-b \pm \sqrt{b^2 - 4ac}}{2a}$$" />
                        <components:RichContentView Source="$$\int_{-\infty}^{\infty} e^{-x^2} dx = \sqrt{\pi}$$" />
                        <components:RichContentView Source="$$\sum_{i=1}^{n} i = \frac{n(n+1)}{2}$$" />

                        <TextBlock Text="Complex Expressions:" FontSize="16" FontWeight="Bold" />
                        <components:RichContentView Source="$$\frac{\partial f}{\partial x} = \lim_{h \to 0} \frac{f(x+h) - f(x)}{h}$$" />
                        <components:RichContentView Source="$$\alpha + \beta = \gamma \quad \text{where} \quad \alpha, \beta, \gamma \in \mathbb{R}$$" />

                        <TextBlock Text="Matrix Examples:" FontSize="16" FontWeight="Bold" />
                        <components:RichContentView Source="$$\begin{bmatrix} a &amp; b \\ c &amp; d \end{bmatrix}$$" />
                        <components:RichContentView Source="$$\begin{pmatrix} 1 &amp; 2 &amp; 3 \\ 4 &amp; 5 &amp; 6 \\ 7 &amp; 8 &amp; 9 \end{pmatrix}$$" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource SurfaceSecondaryBrush}"
                    CornerRadius="8"
                    Padding="20"
                    Margin="0,20,0,0">
                <StackPanel Spacing="15">
                    <TextBlock Text="Manual Learning Path Generator"
                               FontSize="{DynamicResource FontSize.Heading5}"
                               FontFamily="{DynamicResource Font.SemiBold}"
                               Foreground="{DynamicResource TextPrimaryBrush}" />

                    <TextBlock Text="Create a blank learning path with custom units for testing purposes."
                               FontSize="{DynamicResource FontSize.Body.Small}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <TextBox Watermark="Enter path title..."
                             Text="{Binding PathTitle}"
                             Width="400"
                             HorizontalAlignment="Left" />

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="Add Unit"
                                Command="{Binding AddUnitCommand}"
                                Classes="primary"
                                FontSize="{DynamicResource FontSize.Body.Small}" />
                        
                        <Button Content="Save Path"
                                Command="{Binding SavePathCommand}"
                                Classes="primary"
                                FontSize="{DynamicResource FontSize.Body.Small}" />
                    </StackPanel>

                    <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Units}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource SurfaceTertiaryBrush}"
                                            CornerRadius="6"
                                            Padding="15"
                                            Margin="0,0,0,10">
                                        <StackPanel Spacing="10">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <TextBlock Text="{Binding Order, StringFormat='Unit {0}'}"
                                                           FontFamily="{DynamicResource Font.SemiBold}"
                                                           FontSize="{DynamicResource FontSize.Body}"
                                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center" />
                                                <Button Content="Remove"
                                                        Command="{Binding RemoveCommand}"
                                                        Classes="danger"
                                                        FontSize="{DynamicResource FontSize.Body.Small}"
                                                        Padding="8,4" />
                                            </StackPanel>

                                            <TextBox Watermark="Unit title..."
                                                     Text="{Binding Title}"
                                                     Width="350"
                                                     HorizontalAlignment="Left" />

                                            <TextBox Watermark="Unit content (supports Markdown and LaTeX)..."
                                                     Text="{Binding Content}"
                                                     Width="350"
                                                     MinHeight="100"
                                                     AcceptsReturn="True"
                                                     TextWrapping="Wrap"
                                                     HorizontalAlignment="Left" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
