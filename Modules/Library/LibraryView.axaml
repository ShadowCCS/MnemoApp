<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MnemoApp.Modules.Library"
             xmlns:extensions="clr-namespace:MnemoApp.Modules.Library.Extensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="MnemoApp.Modules.Library.LibraryView"
             x:DataType="local:LibraryViewModel">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource BackgroundLevel2}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0"
                Padding="24,16">
            <TextBlock Text="Library"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextPrimaryBrush}" />
        </Border>

        <!-- Tab Navigation -->
        <Border Grid.Row="1" 
                Background="{DynamicResource BackgroundLevel1}"
                Padding="24,16,24,0">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Extensions"
                        Classes="tab-button"
                        Classes.selected="{Binding SelectedTabIndex, Converter={x:Static local:LibraryViewModel.ExtensionsTabConverter}}"
                        Command="{Binding SelectExtensionsCommand}" />
                <Button Content="Content"
                        Classes="tab-button"
                        Classes.selected="{Binding SelectedTabIndex, Converter={x:Static local:LibraryViewModel.ContentTabConverter}}"
                        Command="{Binding SelectContentCommand}" />
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="2" 
                Background="{DynamicResource BackgroundLevel1}"
                Padding="24">
            <ContentControl Content="{Binding CurrentContent}" />
        </Border>
    </Grid>

    <UserControl.Styles>
        <Style Selector="Button.tab-button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,12" />
            <Setter Property="MinHeight" Value="44" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Normal" />
        </Style>
        
        <Style Selector="Button.tab-button:pointerover">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}" />
        </Style>
        
        <Style Selector="Button.tab-button.selected">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        
        <Style Selector="Button.tab-button.selected:pointerover">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundSecondaryBrush}" />
        </Style>
    </UserControl.Styles>

</UserControl>

