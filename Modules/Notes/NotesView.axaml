<UserControl
    x:Class="MnemoApp.Modules.Notes.NotesView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MnemoApp.Modules.Notes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:components="clr-namespace:MnemoApp.UI.Components"
    x:CompileBindings="False"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid ColumnDefinitions="2*,5*">
        <!--  Left Panel: Notes List  -->
        <Border
            Grid.Column="0"
            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*">
                <!--  Header with Search and Create Button  -->
                <Grid
                    Grid.Row="0"
                    Margin="16,16,16,8"
                    RowDefinitions="Auto,Auto">
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,12"
                        FontSize="24"
                        FontWeight="Bold"
                        Text="All Notes" />

                    <Grid
                        Grid.Row="1"
                        RowDefinitions="Auto,Auto"
                        Margin="0,0,0,0">
                        <components:LocalSearchBar   
                            Grid.Row="0"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Stretch"
                            Text="{Binding SearchText, Mode=TwoWay}" />

                        <Button
                            Grid.Row="1"
                            HorizontalAlignment="Stretch"
                            Click="CreateNote_Click"
                            Content="Create Note"
                            Padding="8"
                            ToolTip.Tip="Create Note" />
                    </Grid>
                </Grid>

                <!--  Notes List  -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="0">
                        <!--  Notes List  -->
                        <ItemsControl Margin="8,8,8,8" ItemsSource="{Binding NotesList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,8"
                                        Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                                        CornerRadius="8"
                                        Cursor="Hand"
                                        Padding="12"
                                        PointerPressed="NoteCard_PointerPressed">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Text="{Binding Title}"
                                            TextTrimming="CharacterEllipsis" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!--  Right Panel: Editor or Empty State  -->
        <Grid Grid.Column="1">
            <!--  Empty State  -->
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsVisible="{Binding !IsNoteSelected}">
                <TextBlock
                    FontSize="48"
                    HorizontalAlignment="Center"
                    Opacity="0.3"
                    Text="📝" />
                <TextBlock
                    Margin="0,16,0,0"
                    FontSize="18"
                    Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                    HorizontalAlignment="Center"
                    Text="Select a note to start editing" />
            </StackPanel>

            <!--  Note Editor  -->
            <ContentControl
                Content="{Binding EditorViewModel}"
                IsVisible="{Binding IsNoteSelected}" />
        </Grid>
    </Grid>
</UserControl>

