<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MnemoApp.App"
             xmlns:local="using:MnemoApp">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <!-- Global font family application -->
        <Style Selector="TemplatedControl">
            <Setter Property="FontFamily" Value="{DynamicResource DefaultFontFamily}"/>
        </Style>

        <!-- This has to be included for initalization, but will be replaced by ThemeService -->
        <StyleInclude Source="avares://MnemoApp/UI/Themes/Core/Dawn/theme.axaml"/>
    </Application.Styles>

</Application>