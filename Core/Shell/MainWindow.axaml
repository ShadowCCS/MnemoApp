<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MnemoApp.Core.Shell"
        xmlns:services="using:MnemoApp.Core.Services"
        xmlns:ui="using:MnemoApp.UI.Components"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sidebar="using:MnemoApp.UI.Components.Sidebar"
        mc:Ignorable="d" d:DesignWidth="1150" d:DesignHeight="720"
        x:Class="MnemoApp.Core.Shell.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/UI/Assets/mnemo-logo.ico"
        WindowStartupLocation="CenterScreen"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Background="{x:Null}"
        Width="1150"
        Height="720"
        MinWidth="1000"
        MinHeight="600"
        Title="Mnemo">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Border Background="{DynamicResource WorkspaceBackgroundBrush}" BorderThickness="0" CornerRadius="15">
        <Grid>
            <!-- Main content grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="60" MaxWidth="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar -->
            <sidebar:Sidebar DataContext="{Binding SidebarViewModel}" />

            <Border Grid.Column="1" CornerRadius="15" Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="17*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="{DynamicResource TopbarBackgroundBrush}" PointerPressed="app_MouseDown"> <!--TOPBAR-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="Red" Padding="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2">
                            </Border>
                            <Border Grid.Column="1" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="2">
                                <ItemsControl ItemsSource="{Binding ui.topbar.items}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="4"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.DataTemplates>
                                        <DataTemplate DataType="services:TopbarButtonModel">
                                            <ui:TopbarButton/>
                                        </DataTemplate>
                                        <DataTemplate DataType="services:TopbarSeparatorModel">
                                            <Border Width="{Binding Thickness}"
                                                    Height="{Binding Height}"
                                                    Margin="{Binding Margin}"
                                                    Background="{DynamicResource IconsSeparationBarBrush}"/>
                                        </DataTemplate>
                                        <DataTemplate DataType="services:TopbarCustomModel">
                                            <ContentPresenter Content="{Binding Content}"/>
                                        </DataTemplate>
                                    </ItemsControl.DataTemplates>
                                </ItemsControl>
                            </Border>
                    </Grid>


                    <Border Grid.Row="1" Padding="10"> <!--WORKSPACE-->
                        <Grid Background="{DynamicResource WorkspaceBackgroundBrush}">
                            <ContentControl Content="{Binding CurrentPage}"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Overlay notification panel - positioned on top -->
            <Canvas Grid.ColumnSpan="2" IsHitTestVisible="False">
                <Border Canvas.Right="15" Canvas.Bottom="15" 
                        Background="Blue" 
                        Width="350" 
                        Height="600" 
                        Opacity="0"
                        IsHitTestVisible="False"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,15">
                            <Border Background="Red" CornerRadius="10" Padding="10"> <!--Demo Notification-->
                                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                    <services:MnemoSvg SvgPath="avares://MnemoApp/UI/Assets/Branding/logo_icon.svg" Width="20" Height="20" Fill="{DynamicResource SidebarLogoBrush}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    <StackPanel Spacing="0">
                                        <TextBlock Text="Update available" FontSize="16" Foreground="White" HorizontalAlignment="Left" FontWeight="Bold"/>
                                        <TextBlock Text="Version 1.1 ready to install" FontSize="12" Foreground="White" HorizontalAlignment="Left" TextWrapping="Wrap"/>
                                    </StackPanel>
                                    <Button FontSize="10" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent" BorderThickness="0">
                                        <services:MnemoSvg SvgPath="avares://MnemoApp/UI/Icons/Tabler/outline/square-rounded-x.svg" Width="20" Height="20" StrokeWidth="2.5" Stroke="{DynamicResource IconsSidebarBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Canvas>
        </Grid>
    </Border>
</Window>